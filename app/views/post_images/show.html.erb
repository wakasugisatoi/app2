<div class="container">
  <div class="card mx-auto mt-4 shadow-lg">
    <%= image_tag @post_image.get_image %>
    <div class="card-body">
      <div class="row">
        <div class="col-sm-12 col-md-2">
          <%= image_tag @post_image.user.get_profile_image(100,100) %>
        </div>
        <div class="col-sm-12 col-md-10">
          <p class="card-title">
           <i class="fa-regular fa-flag"></i>
           <%= @post_image.shop_name %>
          </p>
          <p class="card-title">説明：<%= @post_image.caption %></p>
          <span><i class="fa-solid fa-user"></i><%= @post_image.user.name %> | </span>
          <span><%= @post_image.created_at.strftime('%Y/%m/%d') %> | </span>  
          <span><i class="fa-solid fa-comment"></i><%= @post_image.post_comments.count %> | </span>
          <div id="favorite_btn_<%= @post_image.id %>" ><%= render 'favorites/favorites', post_image: @post_image %></div>
          <% if @post_image.user == current_user %>
            <%= link_to "削除", post_image_path(@post_image), method: :delete %>
          <% end %>
        </div>
        <div class="card-text">
          <% @post_image.post_comments.each do |post_comment| %>
            <div class="comment">
              <span><%= image_tag post_comment.user.get_profile_image(50,50) %></span>
              <span><%= post_comment.user.name %></span>
              <span><%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.comment %></span>
              <span>
               <% if post_comment.user == current_user %>
                 <%= link_to "削除", post_image_post_comment_path(post_comment.post_image,post_comment), method: :delete %>
               <% end %> 
              </span>
            </div>
          <% end %>
        </div>
        <div class="form-group mt-2">
          <p>コメントする</p>
          <%= form_with model: [@post_image, @post_comment] do |f| %>
            <%= f.text_area :comment, cols: "40", placeholder: "コメントをここに" %><br>
            <%= f.submit "送信する", class: "btn btn-primary mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

